<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar" >
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/app_background</item>
    </style>

    <style name="AppTheme.Default" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryPale">@color/colorPrimaryPale</item>
    </style>

    <style name="AppTheme.InGame" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryInGame</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkInGame</item>
        <item name="colorAccent">@color/colorAccentInGame</item>
        <item name="colorPrimaryPale">@color/colorPrimaryInGamePale</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">

    </style>

    <style name="AppTheme.Dialog.InGame" parent="AppTheme.Dialog">
        <item name="colorPrimary">@color/colorPrimaryInGame</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkInGame</item>
        <item name="colorAccent">@color/colorPrimaryInGame</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">?android:colorPrimaryDark</item>
        <item name="android:background">@drawable/app_theme_button_background</item>
        <item name="android:textColor">?android:colorPrimaryDark</item>
        <item name="cornerRadius">90dp</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="strokeColor">?android:colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Button.Medium" parent="AppTheme.Button">
        <item name="android:textSize">18sp</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="AppTheme.Button.Large" parent="AppTheme.Button">
        <item name="android:textSize">32sp</item>
        <item name="strokeWidth">4dp</item>
    </style>
</resources>
